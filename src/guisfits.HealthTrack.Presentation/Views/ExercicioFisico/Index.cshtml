@model IEnumerable<guisfits.HealthTrack.Application.ViewModels.ExercicioFisicoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Exercícios Físicos</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create")"><i class="fa fa-plus" aria-hidden="true"></i> Adicionar</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Calorias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataHora)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Calorias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataHora)
        </td>
        <td>
            @Html.Partial("_CRUD", item)
        </td>
    </tr>
}

</table>
