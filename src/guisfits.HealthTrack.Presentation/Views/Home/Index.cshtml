@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        
        <div class="item active">
            <img src="~/images/panel/healthy.jpeg" class="img-responsive"/>
            <div class="carousel-caption" role="option">
                <p>
                    Cadastre-se gratuitamente
                    <a href="@Url.Action("Register", "Account")" class="btn btn-default">
                        Registrar-se
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/panel/food.jpg" class="img-responsive"/>
            <div class="carousel-caption" role="option">
                <p>
                    Controle sua alimentação
                    <a href="@Url.Action("Create", "Alimento")" class="btn btn-default">
                        <i> <span class="fa fa-plus"></span></i> Adicionar
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/panel/exercise.jpeg" class="img-responsive"/>
            <div class="carousel-caption" role="option">
                <p>
                    Faça exercícios e mantenha-se saudável
                    <a href="@Url.Action("Create", "ExercicioFisico")" class="btn btn-default">
                        <i> <span class="fa fa-plus"></span></i> Adicionar
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/panel/weight.jpeg" class="img-responsive"/>
            <div class="carousel-caption" role="option">
                <p>
                    Mantenha o controle de seus pesos
                    <a href="@Url.Action("Create", "Peso")" class="btn btn-default">
                        <i> <span class="fa fa-plus"></span></i> Adicionar
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/panel/pressure.jpg" class="img-responsive"/>
            <div class="carousel-caption" role="option">
                <p>
                    Meça sua pressão e controle sua saúde
                    <a href="@Url.Action("Create", "PressaoArterial")" class="btn btn-default">
                        <i> <span class="fa fa-plus"></span></i> Adicionar
                    </a>
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>


<footer class="footer">
    <hr/>
    <p class="row text-center">&copy; @DateTime.Now.Year - Health Track</p>
</footer>