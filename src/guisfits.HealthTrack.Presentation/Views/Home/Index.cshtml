@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/panel/healthy.jpeg" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/panel/food.jpg" class="img-responsive" />
            
        </div>
        <div class="item">
            <img src="~/images/panel/exercise.jpeg" class="img-responsive" />
            
        </div>
        <div class="item">
            <img src="~/images/panel/weight.jpeg" class="img-responsive"/>
            
        </div>
        <div class="item">
            <img src="~/images/panel/pressure.jpg" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h3>Alimentos</h3>
        <p>Controle sua alimentação.</p>
        <p><a class="btn btn-default" href="@Url.Action("Create", "Alimento")"><i> <span class="fa fa-plus"></span></i> Adicionar</a></p>
    </div>
    <div class="col-md-3">
        <h3>Exercícios Físicos</h3>
        <p>Faça exercícios e mantenha-se saudável.</p>
        <p><a class="btn btn-default" href="@Url.Action("Create", "ExercicioFisico")"><i> <span class="fa fa-plus"></span></i> Adicionar</a></p>
    </div>
    <div class="col-md-3">
        <h3>Pesos</h3>
        <p>Mantenha o histórico dos seus pesos</p>
        <p><a class="btn btn-default" href="@Url.Action("Create", "Peso")"><i> <span class="fa fa-plus"></span></i> Adicionar</a></p>
    </div>
    <div class="col-md-3">
        <h3>Pressões Arteriais</h3>
        <p>Meça sua pressão e controle sua saúde</p>
        <p><a class="btn btn-default" href="@Url.Action("Create", "PressaoArterial")"><i> <span class="fa fa-plus"></span></i> Adicionar</a></p>
    </div>
</div>

<footer class="footer">
    <hr/>
    <p class="row text-center">&copy; @DateTime.Now.Year - Health Track</p>
</footer>