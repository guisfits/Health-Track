@model guisfits.HealthTrack.Application.ViewModels.PesoViewModel

@{
    ViewBag.Title = "Editar Peso";
}

@Html.Partial("_Logo")

@using (Html.BeginForm("Edit", "Peso", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-cadastro", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@ViewBag.Title</h4>
    <hr />
    <div class="form-horizontal">
        @Html.Partial("_SummaryErrors")
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.PesoValue, htmlAttributes: new {@class = "control-label col-md-4"})
            <div class="col-md-8">
                @Html.EditorFor(model => model.PesoValue, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.PesoValue, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataHora, htmlAttributes: new {@class = "control-label col-md-4"})
            <div class="col-md-8">
                @Html.EditorFor(model => model.DataHora, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.DataHora, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-8 btn-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a href="@Url.Action("Index")" class="btn btn-default">Cancelar</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Site");
}