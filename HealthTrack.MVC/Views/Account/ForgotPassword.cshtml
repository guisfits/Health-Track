@model HealthTrack.MVC.ViewModels.ForgotPasswordViewModel

@Html.Partial("_Logo")
<div class="col-md-4 col-md-offset-4">
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Recuperar senha</h4>
    <hr />
    @Html.Partial("_SummaryErrors")
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope fa-fw" aria-hidden="true"></i></span>
            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "Digite seu E-mail", autofocus = "true"})
            @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})

        </div>
    </div>

    <div class="form-group">
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="Enviar Email" />
        </div>
    </div>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
