        <div class="container">
            <div class="panel panel-default row">
                
                <div class="panel-heading">
                    <h3 class="panel-title">Cadastre um novo exercício</h3>
                </div>
                
                <div class="panel-body">
                    <form class="form" role="form" id="exercicioForm">
                        
                        <div class="form-group">
                            <label class="control-label" for="data">Data</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                                <input class="form-control" type="date" name="data" required autofocus>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="horario" class="control-label">Horário</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-clock-o" aria-hidden="true"></i></span>
                                <input type="time" class="form-control" name="horario" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="tipo" class="control-label">Tipo</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-bicycle" aria-hidden="true"></i></span>
                                <select name="tipo" class="form-control" required>
                                    <option value="musculacao">Musculação</option>
                                    <option value="caminhada">Caminhada</option>
                                    <option value="corrida">Corrida</option>
                                    <option value="pedalada">Pedalada</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="calorias" class="control-label">Calorias</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-arrow-circle-down"></i></span>
                                <input type="number" class="form-control" name="calorias" placeholder="" required min="1">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="descricao" class="control-label">Descrição</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-file-text-o" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" name="descricao" minlength="2" maxlength="50">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" class="form-control btn btn-success" value="Adicionar">
                        </div>

                    </form>
                </div>
            </div>

            <div class="row col-md-8 col-md-offset-2">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <tr>
                                <th>Data</th>
                                <th class="hidden-xs hidden-sm">Horario</th>
                                <th>Tipo</th>
                                <th>Calorias</th>
                                <th class="hidden-xs">Descrição</th>
                            </tr>
                        </tr>
                    </thead>
